<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>About • Kenari Tower Hotel</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    * { box-sizing: border-box; }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: 'Inter', sans-serif;
      background:
        radial-gradient(1200px 600px at 10% 10%, rgba(99,102,241,.15), transparent 40%),
        radial-gradient(800px 500px at 90% 90%, rgba(16,185,129,.12), transparent 40%),
        linear-gradient(180deg, #0b1220, #020617);
      color: #e5e7eb;
      padding: 24px;
    }

    .shell { max-width: 1100px; margin: 0 auto; }

    /* HEADER */
    .topbar {
      display:flex;
      align-items:center;
      justify-content:space-between;
      padding:16px 18px;
      border-radius:20px;
      background: rgba(15,23,42,.70);
      backdrop-filter: blur(12px);
      border:1px solid rgba(255,255,255,.08);
      box-shadow:0 18px 40px rgba(0,0,0,.35);
    }

    .brand h1 { margin:0;font-size:16px;font-weight:600; }
    .brand p { margin:4px 0 0;font-size:12px;color:#9ca3af; }

    .userbox { display:flex;align-items:center;gap:12px;flex-wrap:wrap; }

    .pill {
      padding:8px 10px;
      border-radius:999px;
      border:1px solid rgba(255,255,255,.10);
      background: rgba(2,6,23,.55);
      font-size:12px;
      color:#cbd5f5;
      text-decoration:none;
    }

    .logoutBtn {
      padding:10px 12px;
      border-radius:14px;
      background: rgba(239,68,68,.10);
      border:1px solid rgba(239,68,68,.25);
      color:#fecaca;
      font-size:12px;
      cursor:pointer;
    }

    .card {
      margin-top:18px;
      background: rgba(15,23,42,.70);
      border:1px solid rgba(255,255,255,.08);
      border-radius:20px;
      padding:18px;
    }

    label {
      display:block;
      margin:8px 0 4px;
      font-size:12px;
      color:#cbd5f5;
    }

    input, textarea {
      width:100%;
      padding:10px 12px;
      border-radius:12px;
      border:1px solid rgba(255,255,255,.12);
      background: rgba(2,6,23,.60);
      color:#e5e7eb;
      font-size:13px;
    }

    textarea { min-height:120px; resize:vertical; }

    .thumb {
      margin-top:10px;
      width:180px;
      height:120px;
      border-radius:14px;
      overflow:hidden;
      border:1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.04);
      display:flex;
      align-items:center;
      justify-content:center;
      font-size:12px;
      color:#9ca3af;
    }

    .thumb img {
      width:100%;
      height:100%;
      object-fit:cover;
    }

    .saveBar {
      margin-top:16px;
      padding-top:14px;
      border-top:1px solid rgba(255,255,255,.08);
      display:flex;
      justify-content:space-between;
      align-items:center;
    }

    .btnPrimary {
      padding:12px 16px;
      border-radius:14px;
      border:none;
      background: linear-gradient(135deg,#6366f1,#4f46e5);
      color:white;
      font-size:13px;
      cursor:pointer;
    }

    .muted { font-size:12px;color:#9ca3af; }
    .ok { color:#86efac;font-size:12px; }
    .err { color:#fca5a5;font-size:12px; }
  </style>
</head>

<body>
<div class="shell">

  <!-- HEADER -->
  <div class="topbar">
    <div class="brand">
      <h1>Kenari Tower Hotel</h1>
      <p>About</p>
    </div>

    <div class="userbox">
      <div class="pill"><%= user?.email %></div>
      <div class="pill">Role: <%= user?.role %></div>
      <a href="/admin" class="pill">Dashboard</a>
      <form method="POST" action="/auth/logout">
        <button class="logoutBtn">Logout</button>
      </form>
    </div>
  </div>

  <form method="POST" action="/admin/about" enctype="multipart/form-data">
    <div class="card">
      <label>Title</label>
      <input name="title" value="<%= data?.title || '' %>">

      <label>Description</label>
      <textarea name="description"><%= data?.description || '' %></textarea>

      <label>About Image</label>
      <input type="file" name="image">

      <input type="hidden" name="current_image_path" value="<%= data?.image_path || '' %>">

      <div class="thumb">
        <% if (data?.image_path) { %>
          <img src="<%= data.image_path %>">
        <% } else { %>No Image<% } %>
      </div>

      <div class="saveBar">
        <span class="muted">
          <% if (saved) { %><span class="ok">✅ Saved</span><% } %>
          <% if (error) { %><span class="err">❌ <%= error %></span><% } %>
        </span>
        <button class="btnPrimary">Save About</button>
      </div>
    </div>
  </form>

</div>
</body>
</html>
