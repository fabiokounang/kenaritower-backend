<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Services • Kenari Tower Hotel</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    * { box-sizing: border-box; }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: 'Inter', sans-serif;
      background:
        radial-gradient(1200px 600px at 10% 10%, rgba(99,102,241,.15), transparent 40%),
        radial-gradient(800px 500px at 90% 90%, rgba(16,185,129,.12), transparent 40%),
        linear-gradient(180deg, #0b1220, #020617);
      color: #e5e7eb;
      padding: 24px;
    }

    .shell { max-width: 1100px; margin: 0 auto; }

    /* ===== HEADER (CONSISTENT) ===== */
    .topbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      padding: 16px 18px;
      border-radius: 20px;
      background: rgba(15, 23, 42, 0.70);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255,255,255,0.08);
      box-shadow:
        0 18px 40px rgba(0,0,0,.35),
        inset 0 1px 0 rgba(255,255,255,.03);
    }

    .brand h1 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
      letter-spacing: .3px;
    }

    .brand p {
      margin: 4px 0 0;
      font-size: 12px;
      color: #9ca3af;
    }

    .userbox {
      display: flex;
      align-items: center;
      gap: 12px;
      flex-wrap: wrap;
    }

    .pill {
      padding: 8px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(2, 6, 23, .55);
      font-size: 12px;
      color: #cbd5f5;
      white-space: nowrap;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .logoutBtn {
      border: none;
      cursor: pointer;
      padding: 10px 12px;
      border-radius: 14px;
      background: rgba(239, 68, 68, .10);
      border: 1px solid rgba(239, 68, 68, .25);
      color: #fecaca;
      font-weight: 600;
      font-size: 12px;
      transition: all .2s ease;
    }

    .logoutBtn:hover {
      transform: translateY(-1px);
      background: rgba(239, 68, 68, .14);
      border-color: rgba(239, 68, 68, .35);
    }

    /* ===== CARDS ===== */
    .card {
      margin-top: 18px;
      background: rgba(15, 23, 42, 0.70);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 20px;
      padding: 18px;
      box-shadow:
        0 18px 40px rgba(0,0,0,.35),
        inset 0 1px 0 rgba(255,255,255,.03);
    }

    .heroRow {
      margin-top: 14px;
      padding: 16px;
      border-radius: 18px;
      background: rgba(2, 6, 23, .60);
      border: 1px solid rgba(255,255,255,.08);
    }

    label {
      display:block;
      font-size:12px;
      color:#cbd5f5;
      margin:8px 0 4px;
    }

    input, textarea {
      width:100%;
      padding:10px 12px;
      border-radius:12px;
      border:1px solid rgba(255,255,255,.12);
      background: rgba(2, 6, 23, .60);
      color:#e5e7eb;
      font-size:13px;
    }

    textarea { min-height: 90px; resize: vertical; }

    .miniGrid {
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-top: 8px;
    }

    .btnPrimary {
      padding:12px 16px;
      border-radius:14px;
      border:none;
      cursor:pointer;
      font-weight:600;
      font-size:13px;
      background: linear-gradient(135deg,#6366f1,#4f46e5);
      color:white;
    }

    .saveBar {
      margin-top: 16px;
      padding-top: 14px;
      border-top: 1px solid rgba(255,255,255,.08);
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap: 12px;
      flex-wrap: wrap;
    }

    .statusOk { font-size:12px; color:#86efac; }
    .statusErr { font-size:12px; color:#fca5a5; }
    .muted { font-size:12px; color:#9ca3af; line-height: 1.6; }
  </style>
</head>

<body>
  <div class="shell">

    <!-- ✅ HEADER -->
    <div class="topbar">
      <div class="brand">
        <h1>Kenari Tower Hotel</h1>
        <p>Services</p>
      </div>

      <div class="userbox">
        <div class="pill"><%= user?.email || "unknown" %></div>
        <div class="pill">Role: <%= user?.role || "-" %></div>
        <a href="/admin" class="pill">Dashboard</a>

        <form method="POST" action="/auth/logout" style="margin:0;">
          <button class="logoutBtn" type="submit">Logout</button>
        </form>
      </div>
    </div>

    <!-- ✅ ADD SERVICE -->
    <form method="POST" action="/admin/services/add">
      <div class="card">
        <div style="font-weight:600;">Add Service</div>
        <div class="muted" style="margin-top:4px;">
          Tambahkan layanan baru. Setelah add, kamu bisa edit order dan aktif/nonaktif.
        </div>

        <label>Title</label>
        <input name="title" required>

        <label>Description</label>
        <textarea name="description"></textarea>

        <div style="margin-top:12px;text-align:right;">
          <button class="btnPrimary" type="submit">+ Add Service</button>
        </div>
      </div>
    </form>

    <!-- ✅ LIST + UPDATE ALL -->
    <form method="POST" action="/admin/services">
      <div class="card">
        <div style="font-weight:600;">Update Services</div>
        <div class="muted" style="margin-top:4px;">
          Edit semua service sekaligus lalu klik Save.
        </div>

        <% (items || []).forEach((it, i) => { %>
          <div class="heroRow">
            <input type="hidden" name="items[<%= i %>][id]" value="<%= it.id %>">

            <label>Title</label>
            <input name="items[<%= i %>][title]" value="<%= it.title || '' %>">

            <label>Description</label>
            <textarea name="items[<%= i %>][description]"><%= it.description || '' %></textarea>

            <div class="miniGrid">
              <div>
                <label>Sort Order</label>
                <input name="items[<%= i %>][sort_order]" value="<%= it.sort_order %>">
              </div>
              <div>
                <label>Active (1 / 0)</label>
                <input name="items[<%= i %>][is_active]" value="<%= it.is_active %>">
              </div>
            </div>

            <!-- ✅ DELETE (NO nested form) -->
            <button
              class="logoutBtn"
              type="submit"
              formaction="/admin/services/<%= it.id %>/delete"
              formmethod="POST"
              onclick="return confirm('Hapus service ini?')"
              style="margin-top:10px;"
            >
              Delete
            </button>
          </div>
        <% }) %>

        <div class="saveBar">
          <span class="muted">
            Semua perubahan akan disimpan sekaligus.
            <% if (saved) { %> <span class="statusOk">✅ Saved.</span> <% } %>
            <% if (error) { %> <span class="statusErr">❌ <%= error %></span> <% } %>
          </span>

          <button class="btnPrimary" type="submit">Save Services</button>
        </div>
      </div>
    </form>

  </div>
</body>
</html>
